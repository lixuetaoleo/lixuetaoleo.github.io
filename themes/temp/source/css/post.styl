#post
    line-height: 1.5
    h1,.created-date
        text-align: center
        display: block
        font-weight: bold
    h2,h3,h4,h5,h6
        line-height: 2
    h2,h3,h4,h5,h6,ol,ul,p
        margin-top: 10px
    ul
        margin-top: .4rem
        padding-left: .8rem
        li
            margin: 0
.sidebar-toc
    position: relative
    float: right

code
    font-family: 'Source Sans Pro', sans-serif;;
    width: 100%
    box-sizing: border-box
    background: lightgray;
    color: #1f2d3d;

img 
    max-width: 100%;
    max-height: 100%;
    box-sizing: border-box
    border: 1px solid #eaeefb;
