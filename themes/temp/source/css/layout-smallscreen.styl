#layout-page
    display: flex
    flex-direction: column
    align-items:center
    justify-content: center
    min-height: 100%;
    font-family: 'Lato', sans-serif;

#layout-menu
    box-sizing: border-box
    width: 100%
    display: flex
    position: -webkit-sticky;
    position: sticky;
    top: 0px;
    background-color: white

#content
    display: flex
    flex-direction: column
    flex: 1
    box-sizing: border-box
    margin: 20px auto
    width: 70%
    font-size: .95rem
    ul
        list-style: circle
    ol
        list-style: decimal
    a
        text-decoration: none
        color: #337ab7
    a:hover
        border-bottom: 1px solid
    blockquote 
        background: #f8f8f8
        width: 100%
        box-sizing: border-box
        border-left: 10px solid lightgray

#paginator
    text-align: center
    margin-bottom: 0
    margin-top: 10px
    .page-number
        margin: 0 5px

.responsive-pad
    width: 25px
    padding-left: 5px

#mega-head
    text-align: center
    text-decoration: none
    margin: 0 auto
    font-family: 'Amatic SC', cursive;
    font-size: 2em
    color: black
    a
        text-decoration: none
    a:visited
        color: black
    a:hover
        color: gray

.layout-socialmedia
    position: absolute
    width: 100%
    top: 5.5rem
    text-align: center
    background-color: white

.other-page
    background-color: white
    // flex: 1
    width: 100%
    position: absolute
    top: 2rem
    a
        // width: 100%
        font-size: 1.25rem
        margin: 6px auto
        display: block
        // margin: 0 auto
        text-decoration: none
        text-align: center
    //   font-size: 1.125em
    //   color: black
    a:visited
      color: black
    a:hover
      color: gray 
// .layout-socialmedia, .other-page
//     display: none
.layout-socialmedia.hide, .other-page.hide
    display: none
.responsive-bar
    box-sizing: border-box
    font-size: 2rem
    text-align: right
    padding-right: 5px
    height: 2rem
    animation: show 1s ease 
    @keyframes show
        from
            transform: rotate(0)
        to
            transform: rotate(360deg) 
