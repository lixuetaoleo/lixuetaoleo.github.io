#layout-page
    display: flex
    flex-direction: column
    align-items:center
    justify-content: center
    min-height: 100%;
    font-family: 'Lato', sans-serif;
#layout-menu
    box-sizing: border-box
    width: 100%
    display: flex
    position: -webkit-sticky;
    position: sticky;
    top: 0px;
    background-color: white
    text-align: center
    a
        color: black
        text-decoration: none
    a:visited
        color: black
    a:hover
        color: gray

#content
    display: flex
    flex-direction: column
    flex: 1
    box-sizing: border-box
    margin: 20px auto
    width: 70%
    font-size: .95rem
    ul
        list-style: circle
    ol
        list-style: decimal
    a
        text-decoration: none
        color: #337ab7
    a:hover
        border-bottom: 1px solid
    blockquote 
        background: #f8f8f8
        width: 100%
        box-sizing: border-box
        border-left: 10px solid lightgray

#paginator
    text-align: center
    margin-bottom: 0
    margin-top: 10px
    .page-number
        margin: 0 5px

.responsive-pad
    width: 25px
    padding-left: 5px

#mega-head
    margin: 0 auto
    font-family: 'Amatic SC', cursive;
    font-size: 2em

.layout-socialmedia
    position: absolute
    width: 100%
    top: 5.5rem
    background-color: white

.other-page
    background-color: white
    width: 100%
    position: absolute
    top: 2rem
    a
        font-size: 1.25rem
        margin: 6px auto
        display: block
        

.layout-socialmedia, .other-page
    animation: showmenu 1s linear
    @keyframes showmenu
        from
            opacity: 0
        to
            opacity: 1
            
.layout-socialmedia.hide, .other-page.hide
    display: none

.responsive-bar
    box-sizing: border-box
    font-size: 2rem
    text-align: right
    padding-right: 5px
    height: 2rem

.responsive-bar.show
    @extend .responsive-bar
    animation: show 1s ease 
    @keyframes show
        from
            transform: rotate(0)
        to
            transform: rotate(360deg)

#bottom
  box-sizing: border-box
  height:24px
  line-height:24px
  a
    text-decoration: none
    color: black
  a:visited
    color: black
  a:hover
    color: gray