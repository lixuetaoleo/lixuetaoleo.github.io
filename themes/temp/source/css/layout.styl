#layout-page
    display: flex
    flex-direction: column
    align-items:center
    justify-content: center
    min-height: 100%;
    font-family: 'Lato', sans-serif;

#layout-menu
    box-sizing: border-box
    width: 100%
    height: 50px
    display: flex
    position: -webkit-sticky;
    position: sticky;
    top: 0px;
    background-color: white
    a,div
        flex: 1
    .other-page
        a
            margin: 0 10px
            text-decoration: none
            font-size: 1.125em
            color: black
        a:visited
            color: black
        a:hover
            color: gray 

#content
    display: flex
    flex-direction: column
    flex: 1
    box-sizing: border-box
    margin: 20px auto
    width: 50%
    a
        text-decoration: none
        color: #337ab7
    a:hover
        border-bottom: 1px solid

#paginator
    text-align: center
    margin-bottom: 0

#mega-head
    text-align: center
    text-decoration: none
    font-family: 'Amatic SC', cursive;
    font-size: 3em
    color: black
    a:visited
        color: black
    a:hover
        color: gray 

.layout-socialmedia
    text-align: right