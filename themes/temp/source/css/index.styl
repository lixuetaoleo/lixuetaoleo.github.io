}

#main-page
  display:flex
  flex-direction: column
  align-items:center
  justify-content: center
  height: 100%;
  overflow: hidden

#mega-title,#index-menu,.main-socialmedia,#bottom
  text-align: center
#mega-title,#index-menu,.main-socialmedia
  flex:1
#mega-title
  margin-top:150px;
  line-height: 5em
  
  h1
    font-size: 5em
    font-family: 'Amatic SC', cursive;
  p
    font-size: 1.25em
    font-family: 'Lato', sans-serif;
#index-menu
  a
    margin: 0 10px;
    text-decoration: none
    font-family: 'Lato', sans-serif;
    color: black
  a:visited
    color: black
  a:hover
    color: gray 

#bottom
  box-sizing: border-box
  height:24px
  line-height:24px
  a
    text-decoration: none
    color: black
  a:visited
    color: black
  a:hover
    color: gray 

